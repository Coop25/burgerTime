<div class="centering-agent">
    <div class="img"><img class="img" src="https://media.giphy.com/media/l0K4lPx8bvdbFMdGM/giphy.gif" alt=""></div>
    <h1 class="titleText">ITS BURGER TIME!</h1>
    <div id="left" class="together-in-the-middle">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block}}
        {{/unless}}
        {{/each}}
    </div>
    <div id="right" class="together-in-the-middle">
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block-eaten }}
        {{/if}}
        {{/each}}
    </div>
    <div class="input">
        <div class="center">
            <textarea id="textArea" class="center" rows="5" cols="60"></textarea>
            <div class="center"><a onclick="newBurger()" class="button">Add Burger</a></div>
        </div>
    </div>
</div>